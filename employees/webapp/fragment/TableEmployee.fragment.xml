<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">

<Panel id="_IDGenPanel1">
        <Button id="btnShowCity" text="{i18n>showCity}" visible="{jsonModelConfig>/visibleBtnShowCity}" press="onShowCity"/>
        <Button id="btnHideCity" text="{i18n>hideCity}" visible="{jsonModelConfig>/visibleBtnHideCity}" press="onHideCity"/>
        <Table id="tableEmployee" items="{jsonEmployees>/}">
             <columns>
                <Column id="IDColumn1" visible="{jsonModelConfig>/visibleID}">
                    <header>
                        <Label id="_IDGenLabel1" text="{i18n>tableId}"/>
                    </header>
                </Column>
                <Column id="IDColumn2" visible="{jsonModelConfig>/visibleName}">
                    <header>
                        <Label id="_IDGenLabel2" text="{i18n>tableName}"/>
                    </header>
                </Column>
                <Column id="IDColumn3" visible="{jsonModelConfig>/visibleCountry}">
                    <header>
                        <Label id="_IDGenLabel3" text="{i18n>tableCountry}"/>
                    </header>
                </Column>
                <Column id="IDColumn4" visible="{jsonModelConfig>/visibleCity}">
                    <header>
                        <Label id="_IDGenLabel4" text="{i18n>tableCity}"/>
                    </header>
                </Column>
                <Column id="IDColumn5" width="100px">
                    <header>
                        <Label id="_IDGenLabel9" text="{i18n>tableShowDetails}"/>
                    </header>
                </Column>
            </columns>
            <items>
                <ColumnListItem id="_IDGenColumnListItem1" type="Navigation" press="showEmployee">
                    <cells>
                        <Label id="_IDGenLabel5" text="{jsonEmployees>EmployeeID}"/>
                        <Label id="_IDGenLabel6" text="{jsonEmployees>LastName},{jsonEmployees>FirstName}"/>
                        <Label id="_IDGenLabel7" text="{jsonEmployees>Country}"/>
                         <Label id="_IDGenLabel8" text="{jsonEmployees>City}"/>
                         <core:Icon id="icon1" src="sap-icon://show" press="showOrders"></core:Icon>
                    </cells>
                </ColumnListItem>
            </items>        
        </Table>
        <HBox id="ordersTable">                                
        </HBox>
</Panel>
</core:FragmentDefinition>
    
