<mvc:View
    controllerName="logaligroup.employees.controller.EmployeeDetails"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <Page id="pag1" title="{i18n>employeeDetails}">       
        <Panel id="_IDGenPanel1">
            <FlexBox id="_IDGenFlexBox1" height="65px" alignItems="Center" justifyContent="Center">
                <items>
                    <Text id="txt1" text="{jsonEmployees>LastName},{jsonEmployees>FirstName}" class="boldText"/>
                </items>
            </FlexBox>
            <FlexBox id="_IDGenFlexBox2" height="65px" alignItems="Start" justifyContent="SpaceBetween">
                <items>
                    <VBox id="_IDGenVBox1">
                        <Text id="_IDGenText1" text="{i18n>employeeID}" class="boldText sapUiTinyMarginEnd"/>
                        <Text id="_IDGenText2" text="{jsonEmployees>EmployeeID}"/>
                    </VBox> 
                    <VBox id="_IDGenVBox2">
                        <Text id="_IDGenText3" text="{i18n>titleEmployee}" class="boldText sapUiTinyMarginEnd"/>
                        <Text id="_IDGenText4" text="{jsonEmployees>Title}"/>
                    </VBox>
                </items>
            </FlexBox>
            <FlexBox id="_IDGenFlexBox3" alignItems="Start">
                <HBox id="_IDGenHBox1">
                    <Text id="_IDGenText5" text="{i18n>countryCode}" class="boldText sapUiTinyMarginEnd"/>
                    <Text id="_IDGenText6" text="{jsonEmployees>Country}"/>
                    <layoutData>
                        <FlexItemData id="_IDGenFlexItemData1" growFactor="3"></FlexItemData>
                    </layoutData>
                </HBox>
                <HBox id="_IDGenHBox2">
                    <Text id="_IDGenText7" text="{i18n>city}" class="boldText sapUiTinyMarginEnd"/>
                    <Text id="_IDGenText8" text="{jsonEmployees>City}"/>
                    <layoutData>
                        <FlexItemData id="_IDGenFlexItemData2" growFactor="2"></FlexItemData>
                    </layoutData>  
                </HBox>
                <FlexBox id="_IDGenFlexBox4" direction="Row" alignItems="Start">
                    <Text id="_IDGenText9" text="{i18n>postalCode}" class="boldText sapUiTinyMarginEnd"/>
                    <Text id="_IDGenText10" text="{jsonEmployees>PostalCode}"/>  
                    <layoutData>
                        <FlexItemData id="_IDGenFlexItemData3" growFactor="1"></FlexItemData>
                    </layoutData>
                </FlexBox>
            </FlexBox>
        </Panel>
        <Panel class="sapUiSizeCompact" backgroundDesign="Transparent">
            <headerToolbar>
                <Toolbar >
                    <Title text="{i18n>incidence} {= ${jsonEmployees>Country} !=='US' ? ${i18n>europe} : ${i18n>us}}"></Title>
                    <ToolbarSpacer ></ToolbarSpacer>
                    <Button text="{i18n>createIncidence}" press="onCreateIncidence"></Button>
                </Toolbar>               
            </headerToolbar>
            <Panel id="tableIncidence" class="sapUiNoContentPadding" backgroundDesign="Transparent">
            </Panel>
        </Panel>
    </Page>
</mvc:View>